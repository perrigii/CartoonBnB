<div class="">
  <div class="d-flex justify-content-center">
    <div class="card col-lg-6 my-3 ms-4">
      <%= image_tag("#{@place.picture_url}") %>
      <div class="card-body">
        <h3 class="text-center"><%= @place.name %></h3>
        <p class="card-text"><%= @place.description%></p>
        <p class="card-text">Localized at <%= @place.address %></p>
        <p class="card-text">Accomodates up to <%= @place.number_of_guests %> guests</p>
        <p class="card-text">R$<%= @place.price %> /night</p>
        <p class="card-text">Hosted by <%= @place.user.email %></p>
        <%= link_to 'See all of our accommodations', places_path, class: 'btn btn-primary mb-2' %>
        <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
      </div>
    </div>
    <div class="d-flex flex-column col-lg-4 px-3 my-3">
      <%= link_to 'See our available dates', new_place_order_path(@place), class: 'btn btn-primary mb-3 p-3' %>
      <div class="">
        <div class="card w-100 h-64 mt-2">
          <div class="card-body">
            <h5 class="card-title">House Rules</h5>
            <p class="card-text"><ul>
              <li>Please do not enter the house with your shoes on</li>
              <li>Party as much as you can</li>
              <li>Have fun while staying here</li>
              <li>Eat as much as Krusty Krab hamburguer as you want</li>
            </ul></p>
            <%= link_to 'Rent this place now!', new_place_order_path(@place), class: 'btn btn-primary' %>
          </div>
        </div>
        <div class="card w-100 h-64 mt-5">
          <div class="card-body">
            <h5 class="card-title">House Amenities</h5>
            <p class="card-text"><ul>
              <li>Public or shared beach access - Beachfront</li>
              <li>Kitchen</li>
              <li>Free parking on premises</li>
              <li>TV</li>
              <li>Outdoor shower</li>
              <li>Beach view</li>
            </ul></p>
            <%= link_to 'Rent this place now!', new_place_order_path(@place), class: 'btn btn-primary' %>
          </div>
        </div>
        <div class="card w-100 h-64 mt-5">
          <div class="card-body">
            <h5 class="card-title">Contact the host</h5>
            <p class="card-text"><ul>
            <li> <%= @place.user.email %> </li>
            </ul></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
