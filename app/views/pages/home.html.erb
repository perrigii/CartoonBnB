<header class="masthead banner-home" style="background-image: url('https://i.postimg.cc/x8C4qgQP/banner-2.png')">
  <div class="mask py-3" style="background-color: rgba(0, 0, 0, 0.4);">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <img class="display-4 fw-bolder" style="width: 350px;" src="<%= asset_path "logotipo_bnb.png" %>">
            <p class="lead fw-normal mb-0 mt-3">Your dreamhouses come true</p>
        </div>
    </div>
  </div>
</header>



<!-- Section-->
<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% @places.limit(12).each do |place| %>
        <div class="col mb-5">
          <div class="total-cards card h-100">
            <!-- Product image-->
            <div class="square-image">
              <img class="card-img-top" src="<%= place.picture_url %>" alt="..." />
            </div>
            <!-- Product details-->
            <div class="card-body p-3">
              <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder"><%= place.name %></h5>
                  <!-- Product price-->
                <div class="flex">
                  <div>
                    <i class="fa-solid fa-dollar-sign"></i>
                    <span><%= place.price %></span>
                  </div>
                  <!-- Product number_of_guests-->
                  <div class="ms-3">
                    <i class="fa-solid fa-people-group"></i>
                    <span><%= place.number_of_guests %></span>
                  </div>
                </div>
              </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <div class="text-center"><a class="button-details btn btn-primary mt-auto" href="/places/<%= place.id %>">See details</a></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
 <!-- Footer-->
