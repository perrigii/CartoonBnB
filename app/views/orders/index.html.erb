<div class="orders-body">
 <div id="orders-container" class="d-flex flex-column p-4">
    <h3 class="subtitle text-center m-4">My orders</h3>
    <div id="card-container" class="row justify-content-around align-items-center p-4">
    <% if @orders.present? %>
      <% @orders.each do |order|%>
      <div id="card-order" class="d-flex justify-content-around align-items-center col-12 col-md-4 col-lg-3 m-4">
        <p>Reserva para: <%= order.place %></p>
      </div>
      <% end %>
    <% else %>
      <p class="text-center">There is no orders yet</p>
    <% end %>
    </div>
  </div>
</div>
