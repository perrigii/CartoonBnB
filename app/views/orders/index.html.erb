<div class="orders-body" style="min-height: 985px;">
 <div id="orders-container" class="d-flex flex-column p-4">
    <div class="order-subtitle">
      <h3 class="text-center mt-4">My reservations</h3>
      <p class="text-center col-12">Here are your cartoon reservations</p>
    </div>
    <div id="card-container" class="row justify-content-around align-items-center p-4">
    <% if @orders.present? %>
      <% @orders.each do |order|%>
      <div id="card-order" class="align-items-center col-6 col-md-4 col-lg-3 m-4">
        <p class=""><strong>Book to: </strong><%= order.place.name %></p>
        <img src="<%= order.place.picture_url %>" alt="Place Image" class="img-fluid">
        <p class="pt-3"><strong>Check in: </strong><%= order.start_date.strftime('%d/%m/%Y') %></p>
        <p class=""><strong>Check out: </strong><%= order.end_date.strftime('%d/%m/%Y') %></p>
        <p class=""><strong>Comment: </strong><%= order.comment %></p>
        <%= link_to "Delete", order_path(order), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "del-order text-center btn btn-danger mx-auto d-block"
        %>
      </div>
      <% end %>
    <% else %>
      <div class="no-orders row justify-content-center">
        <p class="text-center col-12 m-4">There are no orders yet</p>
        <i class="fa-regular fa-face-frown-open fa-2xl text-center" style="color: #a636a2;"></i>
      </div>
    <% end %>
    </div>
  </div>
</div>
