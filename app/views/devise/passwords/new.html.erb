<div class="px-5 mt-5">
  <h2>Forgot your password?</h2>
</div>
<div class="row">
  <div class="col-6">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs px-5">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions px-5">
        <%= f.button :submit, "Send me the reset password instructions" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>

  <div class="d-flex justify-content-center col-6">
    <img src="https://pngfre.com/wp-content/uploads/Ben-10-2-467x1024.png" style="height: 50%">
  </div>
</div>
