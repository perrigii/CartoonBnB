<div class="container">
  <h2 class="my-4">Log in</h2>
  <div class="d-flex justify-content-between">
    <div class="login-form col-12 col-md-6">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", placeholder: "Enter email", class:"mb-3" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", placeholder: "Type your password", class:"mb-3" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions d-flex justify-content-evenly col-6 mb-4">
          <%= f.button :submit, "Log in", class: "btn bg-primary text-white ms-2 px-4" %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "btn bg-success text-white ms-2 px-4" %><br />
        </div>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class:"text-decoration-none" %><br />
      <% end %>
    </div>
    <div class="img-login col-4">
      <%= image_tag "rick_and_morty-preview.png", alt: "Desenho animado", class: "rick-img" %>
    </div>
  </div>
</div>
